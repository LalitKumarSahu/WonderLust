<% layout("/layouts/boilerplate") %>
<style>
  #filter-container {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: space-between;
  gap: 1rem; /* Yeh ensure karega ki elements properly spaced rahein */
  flex-wrap: nowrap;
}

#filters-wrapper {
  display: flex;
  align-items: center;
  flex-grow: 1;
  overflow: hidden;
}

#filters {
  display: flex;
  flex-wrap: nowrap;
  gap: 1rem;
  overflow-x: auto;
  scroll-behavior: smooth;
  scrollbar-width: none;
  -ms-overflow-style: none;
  padding: 0 40px;
  flex-grow: 1; /* Filters maximum width le sake */
}

#filters::-webkit-scrollbar {
  display: none;
}

.filter {
  flex: 0 0 auto;
  text-align: center;
  min-width: 80px;
}
.tax-toggle {
  border: 1px solid black;
  border-radius: 1rem;
  height: 2rem;
  padding: 0.5rem 1rem;
  background-color: aliceblue;
  display: flex;
  align-items: center;
  white-space: nowrap;
  flex-shrink: 0;
  margin-left: auto; /* ✅ Yeh tax-toggle ko right side shift karega */
  position: relative;
  z-index: 10; /* ✅ Ensure karega ki yeh navigation button ke neeche na aaye */
}

/* ✅ Navigation Buttons Fix */
.nav-btn {
  position: relative;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  border: none;
  padding: 10px 14px;
  cursor: pointer;
  border-radius: 50%;
  z-index: 20; /* ✅ Navigation buttons sabse upar rahenge */
}
.nav-btn.left {
  left: 5px;
}

.nav-btn.right {
  right: 50px; /* Tax-toggle ke overlap ko avoid karne ke liye */
}
/* Large screen (desktop) par nav-btn hide */
@media (min-width: 992px) {
  .nav-btn {
    display: none !important;
  }
}

/* Small/Medium screens par visible */
@media (max-width: 991px) {
  .nav-btn {
    display: block;
  }
}

.modal {
  display: none; /* Hidden by default */
  position: fixed;
  z-index: 1000; 
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: rgba(0,0,0,0.5); /* semi-transparent background */
}

.modal-content {
  background-color: #fff;
  margin: 15% auto;
  padding: 20px;
  border-radius: 10px;
  width: 80%;
  max-width: 400px;
  text-align: center;
}

#modal-close {
  float: right;
  font-size: 20px;
  cursor: pointer;
}


</style>
