<% layout("layouts/boilerplate") %>

<div class="container py-5">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-3 mb-4">
      <div class="list-group shadow-sm rounded">
        <a href="/users/<%= user._id %>/profile"
           class="list-group-item list-group-item-action <%= activeTab==='profile' ? 'active' : '' %>">
          Profile
        </a>
        <a href="/users/<%= user._id %>/profile/about"
           class="list-group-item list-group-item-action <%= activeTab==='about' ? 'active' : '' %>">
          About me
        </a>
        <a href="/users/<%= user._id %>/profile/trips"
           class="list-group-item list-group-item-action <%= activeTab==='trips' ? 'active' : '' %>">
          Past trips
        </a>
        <a href="/users/<%= user._id %>/profile/connections"
           class="list-group-item list-group-item-action <%= activeTab==='connections' ? 'active' : '' %>">
          Connections
        </a>
      </div>
    </div>

    <!-- Main Content -->
    <div class="col-md-9">
      <% if (activeTab === 'profile') { %>
        <!-- Profile -->
        <div class="card shadow-sm border-0 rounded-3 mb-4">
          <div class="card-body text-center">
            <div class="position-relative d-inline-block">
              <img src="<%= user.avatar || ('https://i.pravatar.cc/150?u=' + user._id) %>"
                   class="rounded-circle border shadow-sm" width="120" height="120" alt="Profile Picture">
              <a href="/users/<%= user._id %>/edit"
                 class="btn btn-sm btn-light border position-absolute top-0 end-0">Edit</a>
            </div>
            <h3 class="mt-3"><%= user.username %></h3>
            <p class="text-muted">Guest</p>
          </div>
        </div>

      <% } else if (activeTab === 'about') { %>
        <!-- About -->
        <div class="card shadow-sm border-0 rounded-3 mb-4">
          <div class="card-body">
            <h5 class="mb-3">About me</h5>
            <p><%= (user.about && user.about.trim() !== '') ? user.about : 'No bio added yet.' %></p>
          </div>
        </div>

     <% } else if (activeTab === 'trips') { %>
  <div class="card shadow-sm border-0 rounded-3 mb-4">
    <div class="card-body">
      <h5 class="mb-3">Past trips</h5>
      <% if (trips && trips.length > 0) { %>
        <ul class="list-group">
          <% trips.forEach(trip => { %>
            <li class="list-group-item">
              <strong><%= trip.destination %></strong> - 
              <%= trip.date ? trip.date.toDateString() : '' %>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p class="text-muted">Coming soon...</p>
      <% } %>
    </div>
  </div>

<% } else if (activeTab === 'connections') { %>
  <div class="card shadow-sm border-0 rounded-3 mb-4">
    <div class="card-body">
      <h5 class="mb-3">Connections</h5>
      <% if (connections && connections.length > 0) { %>
        <ul class="list-group">
          <% connections.forEach(friend => { %>
            <li class="list-group-item">
              <%= friend.username %>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p class="text-muted">Coming soon...</p>
      <% } %>
    </div>
  </div>
<% } %>

    </div>
  </div>
</div>
