  <!-- Modal HTML -->
<div id="filter-info-modal" class="modal">
  <div class="modal-content">
    <span id="modal-close">&times;</span>
    <p id="modal-text"></p>
  </div>
</div>

  <script>
      let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", ()=>{
    let taxInfo = document.getElementsByClassName("tax-info");
    for(info of taxInfo){
      if(info.style.display !="inline"){
        info.style.display="inline";
      }else{
        info.style.display="none";
      }
     
    }
    })
    document.addEventListener("DOMContentLoaded", function () {
  const filters = document.getElementById("filters");
  const leftBtn = document.querySelector(".nav-btn.left");
  const rightBtn = document.querySelector(".nav-btn.right");

  leftBtn.addEventListener("click", function () {
    filters.scrollBy({ left: -150, behavior: "smooth" });
  });

  rightBtn.addEventListener("click", function () {
    filters.scrollBy({ left: 150, behavior: "smooth" });
  });
});
// Select all filter elements
const filterItems = document.querySelectorAll(".filter");
const modal = document.getElementById("filter-info-modal");
const modalText = document.getElementById("modal-text");
const modalClose = document.getElementById("modal-close");

// Add click event on each filter
filterItems.forEach(item => {
  item.addEventListener("click", () => {
    const title = item.querySelector("p").textContent;
    // Custom content based on filter
    let content = "";
    switch(title) {
      case "Trending":
        content = "Check out the most popular listings currently!";
        break;
      case "Rooms":
        content = "Explore different types of rooms available.";
        break;
      case "Cities":
        content = "Find listings in top cities around the world.";
        break;
      case "Mountains":
        content = "Discover listings near beautiful mountains.";
        break;
      case "Castles":
        content = "Stay like royalty in amazing castles.";
        break;
      case "Pools":
        content = "Listings with swimming pools for relaxation.";
        break;
      case "Camping":
        content = "Enjoy nature with camping spots.";
        break;
      case "Farms":
        content = "Experience farm stays and rural life.";
        break;
      case "Arctic":
        content = "Unique listings in snowy and Arctic regions.";
        break;
      default:
        content = "More info coming soon!";
    }

    modalText.textContent = content;
    modal.style.display = "block";
  });
});

// Close modal
modalClose.addEventListener("click", () => {
  modal.style.display = "none";
});

// Click outside modal to close
window.addEventListener("click", (e) => {
  if (e.target == modal) {
    modal.style.display = "none";
  }
}); 

  
  </script>




